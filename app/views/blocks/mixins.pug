mixin menuLink(title, href='#')
	li.header-menu-item 
		a.header-menu-link(href=href)=title 
mixin headerBottomItems(number, title)
	.header-bottom-item 
		span.header-bottom-number= number
		span.header-bottom-text= title
mixin blockBox(caption, title, desc)
	.block-box 
		h2.block-box-caption= caption 
		h3.block-box-title= title
		if desc 
			p.block-box-desc=desc
mixin aboutItem(src, title, iconClass, alt = "")
	.about-item 
		img.about-image(src=src, alt=alt)
		.about-content 
			i.about-icon(class=iconClass)
			span.about-title= title
mixin serviceItem(src, title, desc)
	.service-item 
		img.service-item-icon(src=src)
		.service-item-info 
			h3.service-item-title=title
			p.service-item-desc=desc
mixin wedoItem(src,title,desc, active = "")
	.wedo-item(class=active) 
		.wedo-item-header 
			img(src=src).wedo-item-icon
			h3.wedo-item-title=title
			i.fal.fa-angle-up.wedo-item-arrow
		.wedo-item-content 
			.wedo-item-text=desc
mixin teamSocial(facebook="#", twitter="#", pinterest="#", instagram="#")
	ul.team-social 
		li.team-social-item 
			a.team-social-link(href=facebook)
				i.fab.fa-facebook-f
		li.team-social-item 
			a.team-social-link(href=twitter)
				i.fab.fa-twitter
		li.team-social-item 
			a.team-social-link(href=pinterest)
				i.fab.fa-pinterest
		li.team-social-item 
			a.team-social-link(href=instagram)
				i.fab.fa-instagram
mixin teamItem(src, name, position)
	.team-item 
		.team-main 
			img(src=src).team-image
			.team-content 
				if block 
					block		
		.team-info 
			h3.team-name= name 
			span.team-position= position
mixin workItem(src, icon, title="Photographer", full="",desc="Lorem ipsum dolor sit, amet consectetur adipisicing elit.")
	.work-item(class=full)
		img.work-image(src=src)
		.work-content 
			i.work-icon(class=icon)
			h3.work-title=title 
			span.work-desc=desc
mixin peopleItem(src, name, job = "Frontend Developer", desc = "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ullam id ipsam vero quaerat nisi enim sed voluptates blanditiis repellat reiciendis totam, exercitationem veritatis, nobis beatae eligendi, reprehenderit inventore eius iusto?")
	li.people-item 
		img.people-avatar(src=src)
		.people-info 
			h3.people-name=name
			span.people-job=job 
			p.people-desc=desc
mixin storyItem(src, dateNumber ="15", dateText ="Jan", title="Lorem ipsum dolor sit, amet consectetur adipisicing elit.", desc="Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quo eum inventore debitis qui adipisci quia. Voluptate reprehenderit officiis, nisi quia nemo, ullam cupiditate tenetur iste perspiciatis tempora, dolorem voluptatibus!", views="1000",comments="100")
	li.story-item 
		.story-media 
			img.story-image(src=src)
			.story-date
				span.story-date-number=dateNumber
				span.story-date-text=dateText
		h3.story-title=title
		p.story-desc=desc
		.story-meta 
			.story-meta-item 
				i.fa.fa-eye.story-meta-icon 
				span.story-meta-number=views
			.story-meta-item 
				i.fa.fa-comment.story-meta-icon 
				span.story-meta-number=comments
mixin quoteItem(src="../images/img-quote.png", type=false, desc="Lorem ipsum dolor sit amet consectetur, adipisicing elit. Blanditiis eum unde ut laboriosam dicta pariatur optio alias soluta? Fugiat eum magnam illo tempora exercitationem voluptate, totam suscipit saepe aut voluptas!", author = "John Doe") 
	.quote-content 
		if type == false
			.quote-icon 
				img(src=src)
		else 
			.quote-image 
				img(src=src)
		.quote-info 
			p.quote-desc=desc
			span.quote-author=author